{% set currentRoute = app.request.attributes.get('_route') %}
<div id="scr-service-navbar" class="navbar hidden-xs navbar-inverse navbar-fixed-top">
    <div class="container scr-navbar">
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav navbar-right">
            {% if app.user %}
                <li>
                    <a class="{% if currentRoute == 'security_notifications' %}active{% endif %} navbar-user-tooltip" title="Your Notifications" href="{{ path('security_notifications') }}">
                        <i class="fa {% if app.user.getNotificationsNotViewed|length > 0 %}fa-star{% else %}fa-star-o{% endif %}"> </i>
                    </a>
                </li>
            {% endif %}
            {% for menu in security %}
                {% if menu.hasSubMenus %}
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="{{ menu.generateUrl }}">{% if menu.hasIcon %}<i class="fa fa-fw {{ menu.getIcon }}"></i> {% endif %}{{ menu.getTitle|raw }}</a>
                        <ul class="dropdown-menu">
                            {% for i, subMenu in menu.getSubMenus %}
                                {% if subMenu.isHeader %}
                                    {% if i != 0 %}
                                        <li class="divider"></li>
                                    {% endif %}
                                    <li class="dropdown-header">{{ subMenu.getTitle }}</li>
                                {% else %}
                                    <li><a href="{{ subMenu.generateUrl }}">{% if subMenu.hasIcon %}<i class="fa fa-fw {{ subMenu.getIcon }}"></i> {% endif %}{{ subMenu.getTitle|raw }}</a></li>
                                {% endif %}
                            {% endfor %}
                        </ul>
                    </li>
                {% else %}
                    <li class="">
                        <a href="{{ menu.generateUrl }}">{% if menu.hasIcon %}aaaa<i class="fa fa-fw {{ menu.getIcon }}"></i> {% endif %}{{ menu.getTitle|raw }}</a>
                    </li>
                {% endif %}
            {% endfor %}
            </ul>
            <ul class="nav navbar-nav navbar-left">
                {% for menu in services %}
                    <li><a href="{{ menu.generateUrl }}" class="{% if menu.isActive %}active{% endif %}">{% if menu.hasIcon and menu.isActive %}<i class="fa fa-fw {{ menu.getIcon }}"></i> {% endif %}{{ menu.getTitle|raw }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>

