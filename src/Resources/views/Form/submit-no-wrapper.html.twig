<input id="scr-blog-create-submit" type="submit" class="btn btn-default {{ btnClasses }}" value="{{ title }}"/>
{% if app.request.server.has('REQUEST_URI') and app.request.server.has('HTTP_REFERER') %}
    <a href="{{ app.request.server.get('HTTP_REFERER') }}" class="btn btn-warning">Cancel</a>
{% endif %}
