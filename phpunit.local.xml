<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="true"
         bootstrap="src/Tests/bootstrap.phpunit.php">
    <testsuites>
        <testsuite name="Scribe Mantle Bundle Test Suite">
            <directory>./*/Tests/</directory>
        </testsuite>
    </testsuites>
    <groups>
        <exclude>
            <group>functional</group>
        </exclude>
    </groups>
    <filter>
        <whitelist>
            <directory suffix=".php">./lib</directory>
            <directory suffix=".php">./src</directory>
            <exclude>
                <directory>./*/Tests/</directory>
            </exclude>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-html" target="build/logs/coverage/"/>
    </logging>
    <php>
        <server name="KERNEL_DIR" value="./src/Tests/Fixtures/app" />
        <server name="SYMFONY__DATABASE_DRIVER" value="pdo_mysql" />
        <server name="SYMFONY__DATABASE_HOST" value="127.0.0.1" />
        <server name="SYMFONY__DATABASE_PORT" value="3306" />
        <server name="SYMFONY__DATABASE_NAME" value="SymfonyMantleBundle" />
        <server name="SYMFONY__DATABASE_USER" value="root" />
        <server name="SYMFONY__DATABASE_PASSWORD" value="" />
    </php>
</phpunit>
