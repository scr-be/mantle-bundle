{
    "name"             : "scribe/foundation",
    "type"             : "library",
    "description"      : "The Symfony PHP framework used within Scribe with utilities and extras.",
    "keywords"         : ["scribe", "symfony", "framework"],
    "homepage"         : "https://github.com/scribenet/ScribeSymfony",
    "license"          : "MIT",
    "authors"          : [
        {
            "name" : "Rob Frawley 2nd",
            "email": "rfrawley@scribenet.com"
        },
        {
            "name" : "Andrew Thomas",
            "email": "athomas@scribenet.com"
        },
        {
            "name" : "Dan Corrigan",
            "email": "dcorrigan@scribenet.com"
        }
    ],
    "require": {
        "php"                                   : ">=5.6",
        "symfony/symfony"                       : "~2.6",
        "symfony/yaml"                          : "~2.6",
        "doctrine/orm"                          : "~2.4",
        "doctrine/dbal"                         : "<2.5",
        "doctrine/doctrine-bundle"              : "*",
        "doctrine/doctrine-fixtures-bundle"     : "*",
        "twig/twig"                             : "~1.18",
        "twig/extensions"                       : "~1.2",
        "symfony/filesystem"                    : "~2.6",
        "symfony/finder"                        : "~2.6",
        "symfony/swiftmailer-bundle"            : "~2.3",
        "symfony/monolog-bundle"                : "~2.7",
        "symfony/assetic-bundle"                : "~2.6",
        "kriswallsmith/assetic"                 : "~1.2",
        "sensio/distribution-bundle"            : "~3.0",
        "sensio/framework-extra-bundle"         : "~3.0,>=3.0.2",
        "sensio/generator-bundle"               : "~2.5",
        "incenteev/composer-parameter-handler"  : "~2.1",
        "zendframework/zend-json"               : "~2.3",
        "phpoption/phpoption"                   : "~1.4"
    },
    "require-dev"      : {
        "sami/sami"                             : "~3.0",
        "phpunit/phpunit"                       : "~4.5",
        "symfony/phpunit-bridge"                : "~2.7@dev",
        "scrutinizer/ocular"                    : "~1.1",
        "satooshi/php-coveralls"                : "dev-master"
    },
    "suggest"          : {
        "scribe/cache-bundle"                   : "Simple caching abstraction layer for APCu."
    },
    "autoload"         : {
        "psr-4": {
            "Scribe\\SharedBundle\\": "src/Scribe/SharedBundle/",
            "Scribe\\"              : "lib/"
        },
        "files"   : [
            "stub/functions.php"
        ]
    },
    "config"          : {
        "bin-dir": "bin"
    },
    "preferred-install": "dist",
    "minimum-stability": "stable"
}
