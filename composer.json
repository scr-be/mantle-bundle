{
    "name"        : "scr-be/mantle-bundle",
    "license"     : "MIT",
    "type"        : "project",
    "homepage"    : "https://scr.be/mantle-bundle",
    "description" : "An MIT licensed bundle used primarily by Scribe Inc for their own website and client sites. It includes the collection of packages required for our development needs.",
    "support" : {
        "email"  : "rmf@scr.be",
        "issues" : "https://scr.be/mantle-bundle/issues",
        "source" : "https://scr.be/mantle-bundle/git",
        "irc"    : "irc://irc.efnet.org/scribe"
    },
    "keywords"    : [
        "scribe-mantle-bundle", "mantle-bundle", "mantle", "foundation", "bundle", "symfony", "symfony-framework", "scribe", "scr.be", "scribenet", "scribe-software", "scribe-services"
    ],
    "authors"     : [
        {
            "name"    : "Rob Frawley 2nd",
            "email"   : "rmf@scr.be",
            "homepage": "https://scr.be/rmf",
            "role"    : "Project Lead"
        },
        {
            "name"    : "Dan Corrigan",
            "email"   : "dfc@scr.be",
            "homepage": "https://scr.be/dfc",
            "role"    : "Developer (Rogue Rubyist)"
        },
        {
            "name"    : "Andrew Thomas",
            "email"   : "aht@scr.be",
            "homepage": "https://scr.be/aht",
            "role"    : "Developer (UX)"
        }
    ],
    "require" : {
        "php"                                     : ">=5.6.4,~5.6|~7.0",
        "scr-be/wonka-bundle"                     : "~0.2",
        "scr-be/cache-bundle"                     : "~2.2",
        "scr-be/swim-bundle"                      : "~2.2",
        "scr-be/augustus-primitive-library"       : "~0.1",
        "scr-be/arthur-doctrine-library"          : "~0.1",
        "scr-be/arthur-doctrine-fixtures-library" : "~0.1",
        "symfony/dependency-injection"            : "~2.8|~3.0",
        "symfony/http-foundation"                 : "~2.8|~3.0",
        "doctrine/common"                         : "~2.5",
        "doctrine/orm"                            : "~2.5",
        "doctrine/data-fixtures"                  : "~1.1",
        "doctrine/doctrine-bundle"                : "~1.6"
    },
    "require-dev" : {
        "sensio/generator-bundle"              : "~2.5",
        "doctrine/doctrine-fixtures-bundle"    : "~2.0",
        "doctrine/data-fixtures"               : "~1.1",
        "doctrine/migrations"                  : "~1.0",
        "doctrine/doctrine-migrations-bundle"  : "~1.0",
        "symfony/symfony"                      : "~2.8|~3.0",
        "symfony/framework-bundle"             : "~2.8|~3.0",
        "symfony/var-dumper"                   : "~2.8|~3.0",
        "symfony/debug-bundle"                 : "~2.8|~3.0",
        "symfony/phpunit-bridge"               : "~2.8|~3.0",
        "symfony/monolog-bundle"               : "~2.8|~3.0",
        "symfony/assetic-bundle"               : "~2.7|~2.8|~3.0",
        "kriswallsmith/assetic"                : "~1.3",
        "symfony/swiftmailer-bundle"           : "~2.3",
        "swiftmailer/swiftmailer"              : "~5.4",
        "twig/twig"                            : ">=1.22,~1.22",
        "twig/extensions"                      : "~1.3",
        "sensio/distribution-bundle"           : "~4.0",
        "sensio/framework-extra-bundle"        : "~3.0",
        "incenteev/composer-parameter-handler" : "~2.1",
        "zendframework/zend-json"              : "~2.3",
        "phpunit/phpunit"                      : "~5.0",
        "codacy/coverage"                      : "~1.0",
        "satooshi/php-coveralls"               : "~0.7",
        "chriskite/phactory"                   : "~0.4",
        "fzaninotto/faker"                     : "~1.5"
    },
    "suggest" : {
        "ext-memcached" : "*",
        "ext-igbinary"  : "*",
        "ext-tidy"      : "<2.0",
        "ext-curl"      : "*",
        "ext-json"      : "*",
        "ext-mysqli"    : "*",
        "ext-pdo"       : "*"
    },
    "autoload" : {
        "psr-4" : {
            "Scribe\\MantleBundle\\" : "src/"
        }
    },
    "autoload-dev" : {
        "psr-4" : {
            "Scribe\\MantleBundle\\Tests\\" : "tests/"
        }
    },
    "minimum-stability" : "dev",
    "prefer-stable"     : true,
    "config": {
        "bin-dir" : "bin"
    },
    "extra": {
        "branch-alias": {
            "dev-master" : "2.2-dev"
        }
    }
}
